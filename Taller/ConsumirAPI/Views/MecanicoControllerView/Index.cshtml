@model IEnumerable<ConsumirAPI.Models.MecanicoViewModel>

@{
    ViewData["Title"] = "Listado de Mecánicos";
}

<div class="container">
    <h1 class="display-5 mt-5 mb-4">Listado de Mecánicos</h1>

    <div class="mb-4">
        <a asp-action="AgregarMecanico" class="btn btn-primary">Agregar nuevo mecánico</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Edad)</th>
                <th>@Html.DisplayNameFor(model => model.Domicilio)</th>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
                <th>@Html.DisplayNameFor(model => model.SueldoBase)</th>
                <th>@Html.DisplayNameFor(model => model.GratTitulo)</th>
                <th>@Html.DisplayNameFor(model => model.SueldoTotal)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mecanico in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => mecanico.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.Edad)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.Domicilio)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.Especialidad)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.SueldoBase)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.GratTitulo)</td>
                    <td>@Html.DisplayFor(modelItem => mecanico.SueldoTotal)</td>
                    <td>
                        <a asp-action="EditarMecanico" asp-route-id="@mecanico.IdMecanico" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="DetallesMecanico" asp-route-id="@mecanico.IdMecanico" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="EliminarMecanico" asp-route-id="@mecanico.IdMecanico" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
