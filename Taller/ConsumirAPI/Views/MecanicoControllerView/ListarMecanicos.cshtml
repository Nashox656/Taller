@{
    @model List<ConsumirAPI.Models.MecanicoViewModel>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-Mf4tXXDiWpeSXLf8lUDBBqmpdr3P1EG0zS2a6JpENQFt0FhjwIiFHA" crossorigin="anonymous">

    <h1>Listado de Mecánicos</h1>

    <table>
        <thead class="table-dark">
            <tr>
                <th class="bg-primary text-white p-2 border">ID</th>
                <th class="bg-primary text-white p-2 border">Nombre</th>
                <th class="bg-primary text-white p-2 border">Edad</th>
                <th class="bg-primary text-white p-2 border">Domicilio</th>
                <th class="bg-primary text-white p-2 border">Titulo</th>
                <th class="bg-primary text-white p-2 border">Especialidad</th>
                <th class="bg-primary text-white p-2 border">SueldoBase</th>
                <th class="bg-primary text-white p-2 border">GratTitulo</th>
                <th class="bg-primary text-white p-2 border">SueldoTotal</th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var mecanico in Model)
            {
                <tr>
                    <td>@mecanico.IdMecanico</td>
                    <td>@mecanico.Nombre</td>
                    <td>@mecanico.Edad</td>
                    <td>@mecanico.Domicilio</td>
                    <td>@mecanico.Domicilio</td>
                    <td>@mecanico.Titulo</td>
                    <td>@mecanico.Especialidad</td>
                    <td>@mecanico.SueldoBase</td>
                    <td>@mecanico.GratTitulo</td>
                    <td>@mecanico.SueldoTotal</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@mecanico.IdMecanico">Detalles</a> |
                        <a asp-action="Edit" asp-route-id="@mecanico.IdMecanico">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@mecanico.IdMecanico">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="MecanicoControllerView/Crear">Agregar nuevo mecánico</a>
    </p>

}